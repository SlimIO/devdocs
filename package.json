{
    "name": "@slimio/documentation",
    "version": "0.1.1",
    "description": "SlimIO Documentation Generator (CLI)",
    "main": "index.js",
    "scripts": {
        "start": "node index.js",
        "prepublishOnly": "pkg-ok",
        "test": "cross-env psp && nyc --reporter=lcov ava --verbose",
        "doc": "jsdoc -c ./jsdoc.json -r -R ./README.md -P ./package.json --verbose",
        "coverage": "codecov",
        "report": "nyc report --reporter=html"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/SlimIO/documentation.git"
    },
    "keywords": [
        "SlimIO",
        "documentation"
    ],
    "files": [
        "bin/index.js",
        "src/*.js",
        "public"
    ],
    "author": "SlimIO",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/SlimIO/documentation/issues"
    },
    "homepage": "https://github.com/SlimIO/documentation#readme",
    "dependencies": {
        "@polka/send-type": "^0.5.2",
        "@slimio/arg-checker": "^0.2.1",
        "@slimio/is": "^1.5.1",
        "@slimio/jsdoc": "^0.4.0",
        "@slimio/manifest": "^0.9.1",
        "kleur": "^3.0.3",
        "make-promises-safe": "^5.1.0",
        "open": "^7.0.4",
        "polka": "^0.5.2",
        "sade": "^1.7.3",
        "semver": "^7.3.2",
        "sirv": "^0.4.6",
        "zup": "0.0.1"
    },
    "devDependencies": {
        "@commitlint/cli": "^8.3.5",
        "@commitlint/config-conventional": "^8.3.4",
        "@slimio/eslint-config": "^4.1.0",
        "@slimio/psp": "^0.11.1",
        "@types/node": "^14.0.5",
        "ava": "^3.8.2",
        "codecov": "^3.7.0",
        "cross-env": "^7.0.2",
        "eslint": "^7.20.0",
        "husky": "^4.2.5",
        "minami": "^1.2.3",
        "nyc": "^15.0.1"
    },
    "engines": {
        "node": ">=12"
    },
    "husky": {
        "hooks": {
            "pre-push": "cross-env eslint bin/index.js src/**.js && npm test",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "bin": {
        "slimdoc": "./bin/index.js"
    }
}
